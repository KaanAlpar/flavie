<div>
  <div class="blue-background">
    <% if session[:sentence_ids] %>
      <h1 class="my-decks">Choose a deck</h1>
      <%# session[:sentence_ids].each do |si| %>
        <!-- <p><%#= get_sentence(si).content %></p> -->
      <%# end %>
    <% else %>
  </div>
    <div class="blue-background">
      <h1 class="my-decks">My Decks</h1>
    <% end %>
    <div class="white-container white-block pl-5">
      <div class="d-none d-md-block">
         <div class="my-decks-banner-container">
            <%= image_tag "flashcards_newest.png", alt: "Flashcards graphic", class:"my-decks-banner-image" %>
        </div>
      </div>
      <div class="form d-flex justify-content-center pt-5">
        <%= simple_form_for @deck, wrapper: :inline_form, html: { class: 'form-inline' } do |f| %>
        <%#= f.label 'Add a new deck', class: 'mr-2' %>
        <%= f.input :name, placeholder: 'Enter new deck name' %>
        <%= f.submit 'add', class: 'button-blue' %>
        <% end %>
      </div>
      <div class="d-flex justify-content-center pb-4">
        <div class="filters-container">
          <h3 class="sort-by">Sort by</h3>
          <p><%= link_to 'Alphabetical', decks_path(sort: 'alphabetical') %></p>
          <p><%= link_to 'Number of cards', decks_path(sort: 'numerical') %></p>
          <p>Language</p>
        </div>
          <div class="deck-cards-container mt-5">
            <% @decks.each do |deck| %>
            <%= link_to deck_path(deck), class: 'text-decoration-none' do %>
            <div class="deck d-flex flex-column">
              <p class="deck-title deck-p text-center"><%= deck.name %></p>
              <p class="deck-p text-right">Total cards: <%= deck.flashcards.size %></p>
            </div>
            <% end %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
