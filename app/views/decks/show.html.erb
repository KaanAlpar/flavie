<div class="banner_deck text-center">
    <h1><%= @deck.name %></h1>
</div>
<div class="container">
  <div class="d-flex justify-content-center my-5">
    <div class="container mb-3">
      <div class="container d-flex justify-content-between">
        <div>
          <h2 class="mb-4">You have <%= @deck.flashcards.count %> flashcards in this deck</h2>
          <p><strong>Date of creation: </strong> <%= @deck.created_at.strftime("%Y-%m-%d") %></p>
          <p><strong>Last updated: </strong> <%= @deck.updated_at.strftime("%Y-%m-%d") %></p>
        </div>
        <div>
        <!-- <div class="d-flex justify-content-center"> -->
          <% if @deck.flashcards.any?  %>
            <%= link_to practice_deck_path(@deck), class: 'btn btn-primary button-lg align-items-center' do %>
              Study now
            <% end %>

          <% else %>
            <%= link_to root_path(@deck), class: 'button-blue align-items-center' do %>
              Add Video
            <% end %>
          <% end %>
        </div>
        <!-- </div> -->
      </div>
      <div class="flashcard-container p-3">
        <% @deck.flashcards.sort_by{ |f| f.created_at }.each do |flashcard| %>
          <div class="flashcard-preview m-3">
            <div class="flashcard-preview-left">
              <%= flashcard.sentence.content %>
            </div>
            <div class="flashcard-preview-right">
                <% if flashcard.phrase_translation == nil || flashcard.phrase_translation == "" %>
                  <p>"translation comes here"</p>
                <% else %>
                  <p><%= flashcard.phrase_translation %></p>
                <% end %>
            </div>
            <%= link_to edit_flashcard_path(flashcard), class: 'btn btn-outline-primary mr-3' do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
