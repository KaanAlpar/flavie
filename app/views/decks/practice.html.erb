<div class="container mb-5">
  <div>
    <h1>Studying <%= @deck.name %></h1>
  </div>

  <div class="practice-area">
    <div class='deck-main' data-controller='deck' data-deck-index="0">
      <div class="deck-main-body">
        <button class='deck-main-button' data-action='deck#previous'><-</button>
        <article>
          <% @deck.flashcards.each do |fc| %>
            <%= render 'shared/flashcard', flashcard: fc %>
          <% end %>
        </article>
        <button class='deck-main-button' data-action='deck#next'>-></button>
      </div>
    </div>
  </div>

