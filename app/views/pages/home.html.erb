<div class="banner">
  <div class="banner-circles">
    <%= image_tag "banner_circles.svg" %>
  </div>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-8 text-center banner-content">
        <div class="main-content">
          <h2 id="title">the context learning app</h2>
          <h3 id="subtitle">Make flashcards from your favorite videos</h3>
        </div>
          <p>Enter a url to start learning!</p>
        <div class="input-group">
          <div class="url-form">
            <%= simple_form_for @conversion do |f| %>
              <%= f.input :url, label: false, placeholder: 'Example: https://www.youtube.com/watch?v=k34EJF923' %>
          </div>
          <div>
              <%= f.button :submit, class: 'convert-button', value: 'Convert!' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%= render 'how_to' %>
