<div class="container">
  <div class="text-center d-flex align-items-start flex-column p-5 m-auto">
    <div class="m-auto">
      <h1 class="my-5">Flashcard Edit Page</h1>
      <div class="flashcard d-flex flex-column h-100 p-5">
        <%= simple_form_for @flashcard do |f| %>
          <%= f.simple_fields_for :sentence do |s| %>
            <%= s.input :content, input_html: {value: @flashcard.sentence.content} %>
          <% end %>
          <%= f.button :submit, value: "UPDATE", class: 'button-blue' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
