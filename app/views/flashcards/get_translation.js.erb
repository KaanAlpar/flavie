back_text_area = document.getElementById('flashcard_phrase_translation');

<% if @lang == 'en' %>
  if (back_text_area.value === "") {
    back_text_area.value += '<%= @word.downcase %>: <%= @translation.first %>';
  }
  else {
    back_text_area.value += '\n<%= @word.downcase %>: <%= @translation.first %>';
  }
<% elsif @lang == 'ja' %>
  if (back_text_area.value === "") {
    back_text_area.value += '<%= @word %>: <%= @translation.first.first %>';
  }
  else {
    back_text_area.value += '\n<%= @word %>: <%= @translation.first.first %>';
  }
<% end %>
