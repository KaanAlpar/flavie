<div class="background-blue">
  <div class="row">
    <div class="results-header m-5 text-white">
      <h2>results: 123 flashcards</h2>
      <h5>choose your flashcards</h5>
    </div>
  </div>
</div>
<div class="background-pink">
  <div class="sentences-wrapper">
    <ul class="list-group">
      <div class="flashcard m-5">
        <% @conversion.sentences.reverse.each do |sentence| %>
           <li class="list-group-item"><%= sentence.content %></li>
        <% end %>
      </div>
     </ul>

      <div class="button-blue">Sign up</div>
      <div class="button-green"> Click</div>
      <div class="button-orange">Next</div>
      <div class="button-cancel">Cancel Now</div>

  </div>
  <h1><%= @conversion.url %></h1>
  <%= form_tag choose_deck_conversion_path(@conversion), method: :get do %>
    <ul class="list-group">
    <% @conversion.sentences.reverse.each do |sentence| %>
      <li class="list-group-item"><%= check_box_tag "sentences[]", sentence.id %><%= sentence.content %></li>
    <% end %>
    </ul>
    <%= submit_tag "Submit" %>
  <% end %>
</div>
