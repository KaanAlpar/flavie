<div class="results-banner text-white">
  <h3>"<%= @conversion.video_title %>"</h3>
  <p class="results-description m-5">choose the flashcards you want to learn and add them to your deck</p>
</div>
<div class="background-light-yellow">
  <div class="results-flashcard-wrapper">
    <div class="results-flashcards-container">
      <%= form_tag choose_deck_path do %>
      <ul class="flashcards-list p-0">
         <% @conversion.sentences.reverse.each do |sentence| %>
          <li class="flashcard-list-item m-3">
            <label>
              <input type="checkbox" name ="sentence_ids[]" value="<%= sentence.id %>" >
              <span class="results-flashcard"> <p><%= sentence.content %></p></span>
            </label>
          </li>
          <% end %>
        </ul>
        <%= submit_tag "Submit" %>
      <% end %>
    </div>
  </div>
</div>







