<div class="banner">
  <div class="mb-3">
    <h2 id="title">the context learning app</h2>
    <h3 id="subtitle">Make flashcards from your favorite videos</h3>
  </div>
  <div class="d-flex">
    <div class="url-form">
      <%= simple_form_for @conversion do |f| %>
        <%= f.input :video_id, label: false, placeholder: 'Example: https://www.youtube.com/watch?v=k34EJF923' %>
        <%= f.input :language, as: :radio_buttons, collection: ['Japanese', 'English'] %>
    </div>
    <div>
        <%= f.button :submit, "Convert", class: 'convert-button' %>
    </div>
      <% end %>
  </div>
</div>
