<div class="banner">
  <div class="mb-3">
    <h1 class="text-center"> <%= image_tag ("Flavie_6.png") %> </h1>
    <!-- <h1 id="flavie">Flavie</h1> - replaced the regular name for the image above -->
    <h2 id="subtitle">the context learning app</h2>
    <h3 id="subsubtitle">Learn foreign languages with flashcards from your favorite videos</h3>
  </div>
  <div class="d-flex">
    <div class="url-form">
      <%= simple_form_for @conversion do |f| %>
        <%= f.input :video_id, label: false, placeholder: 'https://www.youtube.com/watch?v=Cgxsv1riJhI' %>
    </div>
    <div class="language-choice">
      <%= select_tag "language", options_for_select([ "en", "ja" ], "en")  %>
    </div>
    <div>
        <%= f.button :submit, "Get flashcards!", class: 'convert-button' %>
    </div>
      <% end %>
  </div>
</div>
