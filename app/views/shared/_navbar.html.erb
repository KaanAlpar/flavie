  <%= link_to root_path do %>
    <div id="logo">
      <h3>Flavie</h3>
    </div>
  <% end %>

  <ul class="nav-items <%= li_class %>">
    <% if user_signed_in? %>
      <li id="home" >
        <%= link_to "Home", root_path %>
      </li>
      <li id="stats">
        <%= link_to "Statistics", "#" %>
      </li>
