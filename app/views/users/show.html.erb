  <div>
  <div class="dashboard-banner d-flex justify-content-around">
    <%= image_tag "flashcards_newest.png", alt: "Flashcards graphic", class:"dashboard-banner-image" %>
    <div class="ml-5 mt-3 text-white">
      <h1>My dashboard</h1>
      <h4>Settings and summary of your progress</h4>
    </div>
    <div class="dashboard-deck-card m-3 d-flex justify-content-center">
      <div class="dashboard-deck-count text-center pt-3 pb-3 m-4">
         <h4>decks</h4>
        <i class="far fa-sticky-note icon m-2"></i>
        <h4><%= current_user.decks.count %></h4>
      </div>
      <div class="dashboard-flashcard-count text-center pt-3 pb-3 m-4">
        <h4>flashcards</h4>
        <i class="far fa-clone icon m-2"></i>
        <h4>432</h4>
      </div>
      <div class="dashboard-weekly-time text-center pt-3 pb-3 m-4">
        <h4>success rate</h4>
        <i class="far fa-check-circle icon m-2"></i>
        <h4> 82% </h4>
      </div>
    </div>
  </div>

  <div class="d-flex justify-content-center px-5 py-1">
    <div class="d-flex align-items-center dashboard-deck-display p-5 mt-5 w-100">
      <h3>My Decks Preview</h3>
      <div class="dashboard-decks-preview">
      <% @decks.each do |deck| %>
        <%= link_to deck_path(deck) do  %>
          <div class="dashboard-info-box p-5">
           <h4><%= deck.name %></h4>
          </div>
        <% end %>
      <% end %>
    </div>
    </div>
  </div>


  <div class="text-center p-5">
     <h2>statistics coming soon...</h2>
    <%= image_tag "/assets/graph-2d8fc5b29891bda103ac74bdfb28c812383adf6ded1551ec665d9b0cfe248f92.svg", alt: "alttext", id:"stats",  class:"practice-flashcard-image mr-5" %>
  </div>
</div>
