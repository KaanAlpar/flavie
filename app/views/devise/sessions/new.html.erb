<div class="background-blue d-flex justify-content-center p-5">
  <div class="login-frame-background p-2">
  <div class="login-frame p-4">
    <div class="login">
      <h1>Log in</h1>
    </div>
    <div class="simple-form">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-action d-flex justify-content-center">
        <%= f.button :submit, "Log in", class:"button-blue" %>
      </div>
    <% end %>
  </div>


<%= render "devise/shared/links" %>
</div>
</div>
</div>
